<div class="jumbotron jumbotron-fluid fry-back">
  <div class="container">
    <h1 class="display-3 text-center title-header">Spencer's Burger-o-rama!</h1>
    <img src="/assets/images/burger.png" class="mx-auto d-block img-fluid" id="burger-pic" alt="cartoon burger">
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h3 class="text-center">Ordered Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <h3 class="text-center">Eaten Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <form>
        <div class="form-group">
          <label for="bgr">Enter the name of a burger here!</label>
          <textarea class="form-control" id="bgr" name="burger_name"></textarea>
        </div>
        <button type="submit" class="btn btn-warning" id="add-bgr">Order burger!</button>
      </form>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>

